<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_week"
    tools:context="com.example.yn782.androidtermproject.WeekFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:gravity="center"
        android:layout_height="70dp">
        <TextView
            android:text="0000년00월"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Nowweek"

            android:layout_alignBaseline="@+id/wprevious"
            android:layout_alignBottom="@+id/wprevious"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="Previous"
            android:layout_height="wrap_content"
            android:id="@+id/wprevious"
            android:layout_width="100dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/Nowweek" />

        <Button
            android:text="Next"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/wnext"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/Nowweek" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:background="#303030"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:text="날짜"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_margin="1dp"
            android:gravity="center_vertical|center_horizontal"
            android:background="#FFFFFF"
            android:layout_width="74dp"
            android:layout_height="match_parent" />
        <TextView
            android:text="일정"
            android:textColor="#000000"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="20dp"
            android:layout_margin="1dp"
            android:background="#FFFFFF"
            android:layout_width="300dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <ListView
        android:id="@+id/weeklist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>


</LinearLayout>