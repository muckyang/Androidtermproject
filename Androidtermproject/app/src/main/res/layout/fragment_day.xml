<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_week"
    android:background="#ffffff"
    tools:context="com.example.yn782.androidtermproject.DayFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:gravity="center"
        android:layout_height="70dp">
        <TextView
            android:text="0000년00월00일"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dNowday" />
        <Button
            android:id="@+id/dayselectbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜선택"/>
        <Button
            android:id="@+id/addschedulebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일정추가"/>
    </LinearLayout>
    <CalendarView
        android:background="#ffffff"
        android:id="@+id/calView"
        android:minDate="01/01/2016"
        android:maxDate="12/31/2020"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:showWeekNumber="false"/>
    <LinearLayout
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_margin="1dp"
            android:background="#ffffff"
            android:text="일정제목"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_width="120dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_margin="1dp"
            android:background="#ffffff"
            android:text="일정시간"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_width="120dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_margin="1dp"
            android:background="#ffffff"
            android:text="장소"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_width="120dp"
            android:layout_height="match_parent" />


    </LinearLayout>

    <TextView
        android:id="@+id/nodate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:gravity="center"
        android:text="일정이 없습니다."/>

    <ListView
        android:id="@+id/daylist1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>


</LinearLayout>