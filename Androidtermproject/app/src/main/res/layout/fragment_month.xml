<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_month"
    tools:context="com.example.yn782.androidtermproject.MonthFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="50dp">
        <TextView
            android:text="0000년00월"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Nowmonth"
            android:textSize="20dp"
            android:layout_alignBaseline="@+id/previous"
            android:layout_alignBottom="@+id/previous"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="Previous"
            android:background="#f0f0f0"
            android:layout_height="wrap_content"
            android:id="@+id/previous"
            android:layout_width="100dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/Nowmonth" />

        <Button
            android:text="Next"
            android:background="#f0f0f0"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/next"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/Nowmonth" />

    </RelativeLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#ffffff">
        <TextView
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#ff0000"
            android:text="일"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#000000"
            android:text="월"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#000000"
            android:text="화"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#000000"
            android:text="수"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#000000"
            android:text="목"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#000000"
            android:text="금"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#0000ff"
            android:text="토"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />



        </LinearLayout>
    <GridView
        android:id="@+id/gridView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:numColumns="7" >
    </GridView>
    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
</LinearLayout>